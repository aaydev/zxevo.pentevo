ENT_DI2		LD HL,TEK_LEV
		LD A,(HL)
		INC A
		CP 0x10
		EXX
		RET Z
		EXX
		LD (HL),A
		DEC A
		ADD A,A
		LD H,HIGH (BUF_DIRCEP + CPU6)
		LD L,A
		LD BC,(TEK_ZAP)
		LD (HL),C
		INC L
