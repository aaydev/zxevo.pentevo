ENT_DI1		EXX
		PUSH DE
		LD DE,_DIR_FstClusHI
		ADD HL,DE
		LD C,(HL)
		INC HL
		LD B,(HL)
		LD E,5
		ADD HL,DE
		LD E,(HL)
		INC HL
		LD D,(HL)
		LD A,B
		OR C
		OR D
		OR E
		JR NZ,ENT_DI0
		LD DE,(RootDIRCluster)
		LD BC,(RootDIRCluster + 2)
ENT_DI0		LD (CurrentDIRCluster),DE
		LD (CurrentDIRCluster + 2),BC
