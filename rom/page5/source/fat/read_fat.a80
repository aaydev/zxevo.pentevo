		LD HL,TEK_LEV
		LD A,(HL)
		AND A
		EXX
		RET Z
		EXX
		DEC A
		LD (HL),A
		ADD A,A
		LD H,HIGH (BUF_DIRCEP + CPU6)
		LD L,A
		LD A,(HL)
		INC L
		LD H,(HL)
		LD L,A
